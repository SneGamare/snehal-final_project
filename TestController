package com.example.mskconsumer.controller;

import com.example.kafka.model.YourAvroModel;
import com.example.mskconsumer.consumer.TestConsumer;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import java.util.List;

@RestController
public class TestController {

    private final TestConsumer testConsumer;

    public TestController(TestConsumer testConsumer) {
        this.testConsumer = testConsumer;
    }

    @GetMapping("/messages")
    public List<YourAvroModel> getMessages() {
        return testConsumer.getMessages();
    }
}
